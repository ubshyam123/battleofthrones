<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
<TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:text="Battle Name"
    android:id="@+id/battle_name"
    android:textAlignment="center"
    android:layout_weight="0.02"
    android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:paddingTop="10dp">
   <ImageView
       android:layout_width="70dp"
       android:layout_height="70dp"
       android:src="@color/colorAccent"
       android:layout_marginLeft="40dp"
       android:id="@+id/attacker_image"/>
        <TextView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="VS"
            android:textSize="20sp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@color/colorAccent"
        android:layout_marginLeft="40dp"
        android:id="@+id/defender_image"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingTop="10dp"
        android:weightSum="1">
        <TextView
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:src="@color/colorAccent"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:text="ATTACKER KING NAME"
            android:id="@+id/attacker_name" />

        <TextView
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:textAlignment="center"
            android:text="DEFENDER KING NAME"
            android:id="@+id/defender_name"
            android:layout_width="131dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@color/colorAccent"
            android:layout_marginLeft="60dp"
            android:id="@+id/attacker_status"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@color/colorAccent"
            android:layout_marginLeft="160dp"
            android:id="@+id/defender_status"/>
    </LinearLayout>
</LinearLayout>